<Window x:Class="RegistroOrden.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RegistroOrden"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="{DynamicResource {x:Static SystemColors.GradientActiveCaptionBrushKey}}">
        <Button x:Name="RegistarOrdenButton" Content="Registrar Ordenes" HorizontalAlignment="Left" Margin="568,0,0,0" VerticalAlignment="Center" Width="161" Height="67" FontSize="16" FontWeight="Bold" Click="RegistarButton_Click"/>
        <Button x:Name="RegistrarProductoButton" Content="Registrar Producto" HorizontalAlignment="Left" Margin="58,0,0,0" VerticalAlignment="Center" Width="161" Height="67" FontSize="16" FontWeight="Bold" Click="RegistrarProductoButton_Click"/>
        <Button x:Name="RegistrarClienteButton" Content="Registrar Cliente" HorizontalAlignment="Left" VerticalAlignment="Center" Width="161" Height="67" FontSize="16" FontWeight="Bold" Click="RegistrarClienteButton_Click" Margin="308,0,0,0"/>

    </Grid>
</Window>
